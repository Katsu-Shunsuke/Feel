</head>
<body>
  <div class="post">
    <h1><%= @user.name %>さんの投稿
      <% if @user.id!=current_user.id %>
        <% follow=Follow.where(follow_id: current_user.id) %>
        <% if follow.find_by(opponent_id: @user.id).nil?%>
          <a href="/follow/<%= @user.id %>">フォロー</a>
        <% else %>
          <a href="/remove/<%= @user.id %>">フォロー解除</a>
        <% end %>
      <% end %>
    </h1>
    <h2>全<%= @posts_user.count %>個</h2>

  </div>
</body>
